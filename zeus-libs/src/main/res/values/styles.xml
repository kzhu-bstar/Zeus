<resources>

    <!-- Toolbar style-->
    <style name="Zeus.ToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <!-- Horizontal ProgressBar style -->
    <style name="Zeus.HorizontalProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/zeus_layer_progressbar_horizontal</item>
        <item name="android:minHeight">2dp</item>
        <item name="android:maxHeight">2dp</item>
    </style>

    <!-- LoadingProgressDialog -->
    <style name="Zeus.LoadingProgressDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--<item name="colorAccent">#ffE91E63</item>-->
    </style>
</resources>
